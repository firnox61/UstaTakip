@model UstaTakipMvc.Web.Models.InsurancePayments.InsurancePaymentCreateDto

@{
    Layout = "~/Views/Shared/_Layout.App.cshtml";
    ViewData["Title"] = "Yeni Sigorta Ödemesi";

    var repairJobs = ViewBag.RepairJobs as List<UstaTakipMvc.Web.Models.RepairJobs.RepairJobListDto> ?? new();
    var policies = ViewBag.Policies as List<UstaTakipMvc.Web.Models.InsurancePolicies.InsurancePolicyListDto> ?? new();

    Guid? selectedJob = ViewBag.SelectedRepairJob as Guid?;
    Guid? selectedPolicy = ViewBag.SelectedPolicy as Guid?;
}

<h4>Yeni Sigorta Ödemesi</h4>
<hr />

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="row g-3">

        <!-- Repair Job -->
        <div class="col-md-6">
            <label asp-for="RepairJobId" class="form-label">İşlem</label>
            <select asp-for="RepairJobId" class="form-select">
                <option value="">Seçiniz...</option>
                @foreach (var j in repairJobs)
                {
                    <option value="@j.Id" selected="@(selectedJob.HasValue && j.Id == selectedJob.Value)">
                        @j.VehiclePlate - @j.Description (@j.Price.ToString("C0"))
                    </option>
                }
            </select>
            <span asp-validation-for="RepairJobId" class="text-danger"></span>
        </div>

        <!-- Policy -->
        <div class="col-md-6">
            <label asp-for="InsurancePolicyId" class="form-label">Poliçe</label>
            <select asp-for="InsurancePolicyId" class="form-select">
                <option value="">Seçiniz...</option>
                @foreach (var p in policies)
                {
                    <option value="@p.Id" selected="@(selectedPolicy.HasValue && p.Id == selectedPolicy.Value)">
                        @p.CompanyName - @p.PolicyNumber (@p.VehiclePlate)
                    </option>
                }
            </select>
            <span asp-validation-for="InsurancePolicyId" class="text-danger"></span>
        </div>

        <!-- Payment Rate -->
        <div class="col-md-6">
            <label class="form-label">Sigorta Ödeme Oranı (%)</label>
            <select asp-for="PaymentRate" class="form-select">
                <option value="100">100%</option>
                <option value="75">75%</option>
                <option value="50">50%</option>
                <option value="25">25%</option>
                <option value="0">0%</option>
            </select>
        </div>

        <!-- Paid Amount -->
        <div class="col-md-6">
            <label asp-for="PaidAmount" class="form-label">Sigorta Ödemesi (₺)</label>
            <input asp-for="PaidAmount" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="PaidAmount" class="text-danger"></span>
        </div>

        <!-- Paid Date -->
        <div class="col-md-6">
            <label asp-for="PaidDate" class="form-label">Ödeme Tarihi</label>
            <input asp-for="PaidDate" type="date" class="form-control"
                   value="@Model.PaidDate.ToString("yyyy-MM-dd")" />
        </div>

        <!-- Note -->
        <div class="col-12">
            <label asp-for="Note" class="form-label">Not</label>
            <textarea asp-for="Note" rows="2" class="form-control"></textarea>
        </div>

    </div>

    <div class="mt-4 d-flex gap-2">
        <button class="btn btn-primary"><i class="fa fa-save me-1"></i> Kaydet</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Geri</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
