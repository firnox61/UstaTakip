@model UstaTakipMvc.Web.Models.InsurancePolicies.InsurancePolicyCreateDto
@{
    Layout = "~/Views/Shared/_Layout.App.cshtml";
    ViewData["Title"] = "Yeni Poliçe";

    var vehicles = ViewBag.Vehicles as List<UstaTakipMvc.Web.Controllers.InsurancePoliciesController.VehicleOption> ?? new();
    Guid? selected = ViewBag.VehicleSelected as Guid?;
}

<h4>Yeni Poliçe</h4>
<hr />

<form asp-action="Create" method="post" novalidate>
    @Html.AntiForgeryToken()

    <div class="row g-3">

        <!-- Şirket -->
        <div class="col-md-6">
            <label asp-for="CompanyName" class="form-label">Sigorta Şirketi</label>
            <select asp-for="CompanyName" class="form-select" asp-items="@(new SelectList(ViewBag.Companies))">
                <option value="">Seçiniz...</option>
            </select>
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>

        <!-- Poliçe No -->
        <div class="col-md-6">
            <label asp-for="PolicyNumber" class="form-label">Poliçe No</label>
            <input asp-for="PolicyNumber" class="form-control" />
            <span asp-validation-for="PolicyNumber" class="text-danger"></span>
        </div>

        <!-- Acenta Kodu -->
        <div class="col-md-6">
            <label asp-for="AgencyCode" class="form-label">Acenta Kodu</label>
            <input asp-for="AgencyCode" class="form-control" />
            <span asp-validation-for="AgencyCode" class="text-danger"></span>
        </div>

        <!-- Başlangıç -->
        <div class="col-md-6">
            <label asp-for="StartDate" class="form-label">Başlangıç Tarihi</label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <!-- Bitiş -->
        <div class="col-md-6">
            <label asp-for="EndDate" class="form-label">Bitiş Tarihi</label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <!-- Teminat Tutarı -->
        <div class="col-md-6">
            <label asp-for="CoverageAmount" class="form-label">Teminat Tutarı</label>
            <input asp-for="CoverageAmount" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="CoverageAmount" class="text-danger"></span>
        </div>

        <!-- Araç -->
        <div class="col-md-6">
            <label asp-for="VehicleId" class="form-label">Araç (Plaka)</label>
            <select asp-for="VehicleId" class="form-select">
                <option value="">Seçiniz...</option>
                @foreach (var v in vehicles)
                {
                    var isSelected = selected.HasValue && selected.Value == v.Id;
                    <option value="@v.Id" selected="@(isSelected)">
                        @v.Plate
                    </option>
                }
            </select>
            <span asp-validation-for="VehicleId" class="text-danger"></span>
        </div>

    </div>

    <div class="mt-4 d-flex gap-2">
        <button class="btn btn-primary">
            <i class="fa fa-save me-1"></i> Kaydet
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
