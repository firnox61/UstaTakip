@model List<UstaTakipMvc.Web.Models.InsurancePolicies.InsurancePolicyListDto>
@{
    Layout = "~/Views/Shared/_Layout.App.cshtml";
    ViewData["Title"] = "Poliçeler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="m-0">Sigorta Poliçeleri</h4>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus me-1"></i> Yeni Poliçe
    </a>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Şirket</th>
            <th>Poliçe No</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Tutar</th>
            <th>Araç</th>
            <th style="width:140px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.CompanyName</td>
                <td>@p.PolicyNumber</td>
                <td>@p.StartDate.ToString("dd.MM.yyyy")</td>
                <td>@p.EndDate.ToString("dd.MM.yyyy")</td>
                <td>@p.CoverageAmount.ToString("C0")</td>
                <td>@p.VehicleId</td> <!-- burada plakayı göstermek istersen VehiclePlate alanını DTO’ya eklemen gerekir -->
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-secondary">
                        <i class="fa fa-pen"></i>
                    </a>
                    <form asp-action="Delete" asp-route-id="@p.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?')">
                            <i class="fa fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr><td colspan="7" class="text-muted text-center py-4">Kayıt bulunamadı.</td></tr>
        }
    </tbody>
</table>
