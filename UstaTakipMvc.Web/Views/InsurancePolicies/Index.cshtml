@model List<UstaTakipMvc.Web.Models.InsurancePolicies.InsurancePolicyListDto>
@{
    Layout = "~/Views/Shared/_Layout.App.cshtml";
    ViewData["Title"] = "Sigorta Poliçeleri";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="m-0">Sigorta Poliçeleri</h4>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus me-1"></i> Yeni Poliçe
    </a>
</div>

<!-- 🔍 Search Bar -->
<div class="row g-2 mb-3">
    <div class="col-12 col-md-6 ms-auto">
        <div class="input-group">
            <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
            <input id="q" type="search" class="form-control" placeholder="Şirket, poliçe no, acenta, araç ara...">
        </div>
    </div>
</div>

<table id="policiesTable" class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Şirket</th>
            <th>Poliçe No</th>
            <th>Acenta</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Teminat</th>
            <th>Araç</th>
            <th style="width:140px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr data-row>
                <td data-col>@p.CompanyName</td>
                <td data-col>@p.PolicyNumber</td>
                <td data-col>@p.AgencyCode</td>
                <td data-col>@p.StartDate.ToString("dd.MM.yyyy")</td>
                <td data-col>@p.EndDate.ToString("dd.MM.yyyy")</td>
                <td data-col>@p.CoverageAmount.ToString("C0")</td>
                <td data-col>@p.VehiclePlate</td>

                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-secondary">
                        <i class="fa fa-pen"></i>
                    </a>

                    <form asp-action="Delete" asp-route-id="@p.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Silinsin mi?')">
                            <i class="fa fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }

        @if (!Model.Any())
        {
            <tr>
                <td colspan="8" class="text-muted text-center py-4">Kayıt bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // 🔍 Client-side arama
            const q = document.getElementById("q");
            const rows = Array.from(document.querySelectorAll("#policiesTable tbody tr[data-row]"));

            q?.addEventListener("input", function () {
                const needle = (q.value || "").toLowerCase();
                rows.forEach(tr => {
                    const hay = Array.from(tr.querySelectorAll("[data-col]"))
                                     .map(td => (td.textContent || "").toLowerCase())
                                     .join(" ");
                    tr.style.display = hay.includes(needle) ? "" : "none";
                });
            });
        });
    </script>
}
