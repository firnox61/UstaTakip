@model List<UstaTakipMvc.Web.Models.RepairJobs.RepairJobListDto>
@{
    Layout = "~/Views/Shared/_Layout.App.cshtml";
    ViewData["Title"] = "Tamir/Bakım Kayıtları";
}

@functions {
    string SortUrl(string field)
    {
        var currentField = ViewBag.SortField as string;
        var currentOrder = ViewBag.SortOrder as string ?? "asc";

        var nextOrder = (currentField == field && currentOrder == "asc") ? "desc" : "asc";

        return Url.Action("Index", new { sortField = field, sortOrder = nextOrder });
    }
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="m-0">Tamir/Bakım Kayıtları</h4>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus me-1"></i> Yeni Kayıt
    </a>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
           <th><a href="@SortUrl("Plate")">Plaka</a></th>
<th><a href="@SortUrl("Description")">İş Açıklaması</a></th>
<th><a href="@SortUrl("Price")">Fiyat</a></th>
<th><a href="@SortUrl("Date")">Tarih</a></th>
<th><a href="@SortUrl("Status")">Durum</a></th>
            <th style="width:140px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.VehiclePlate</td>
                <td>@x.Description</td>
                <td>@x.Price.ToString("C0")</td>
                <td>@x.Date.ToString("dd.MM.yyyy")</td>
                <td>
                    <span class="badge bg-@(x.Status switch {
                        "Open" => "danger",
                        "InProgress" => "warning",
                        "Completed" => "success",
                        "Cancelled" => "secondary",
                        _ => "secondary"
                    })">@x.Status</span>
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-sm btn-outline-secondary">
                        <i class="fa fa-pen"></i>
                    </a>
                   <form asp-action="Delete" method="post" class="d-inline">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@x.Id" />

    <button type="submit"
            class="btn btn-sm btn-outline-danger"
            onclick="return confirm('Silinsin mi?')">
        <i class="fa fa-trash"></i>
    </button>
</form>

                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr><td colspan="6" class="text-muted text-center py-4">Kayıt bulunamadı.</td></tr>
        }
    </tbody>
</table>
