@{
    var ok = TempData["Success"] as string;
    var err = TempData["Error"] as string;
}

<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
        @if (!string.IsNullOrWhiteSpace(ok))
        {
            <div class="toast align-items-center text-bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="fa-regular fa-circle-check me-2"></i>@ok
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(err))
        {
            <div class="toast align-items-center text-bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="fa-regular fa-circle-xmark me-2"></i>@err
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // sayfa yüklendiğinde toastları otomatik aç
        document.addEventListener("DOMContentLoaded", function () {
            var toastElList = [].slice.call(document.querySelectorAll('.toast'))
            toastElList.forEach(function (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 4000 }) // 4 sn sonra kaybolur
                toast.show()
            })
        });
    </script>
}
