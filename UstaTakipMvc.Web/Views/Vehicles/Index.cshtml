@model List<UstaTakipMvc.Web.Models.Vehicles.VehicleListDto>

@{
    ViewData["Title"] = "Araç Listesi";
}

<h2>Araç Listesi</h2>

<a class="btn btn-success mb-3" asp-action="Create">Yeni Araç Ekle</a>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Plaka</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Yıl</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Plate</td>
                <td>@item.Brand</td>
                <td>@item.Model</td>
                <td>@item.Year</td>
                <td>
                    <a asp-controller="VehicleImages" asp-action="Upload" asp-route-vehicleId="@item.Id" class="btn btn-sm btn-outline-secondary">
                        Resim Ekle
                    </a>


                    <a href="@Url.Action("Edit", "Vehicles", new { id = item.Id })" class="btn btn-warning btn-sm">Güncelle</a>

                    <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Silmek istediğinizden emin misiniz?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
