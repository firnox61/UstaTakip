@using Microsoft.AspNetCore.Mvc.Rendering
@using UstaTakipMvc.Web.Models.Vehicles
@model IVehicleForm

@{
    var customers = ViewBag.Customers as List<SelectListItem> ?? new();
    var brands = ViewBag.Brands as List<string> ?? new();
}

<div class="row g-3">
    <div class="col-md-3">
        <label asp-for="Plate" class="form-label">Plaka</label>
        <input asp-for="Plate" class="form-control" />
        <span asp-validation-for="Plate" class="text-danger small"></span>
    </div>

    <div class="col-md-5">
        <label class="form-label">Müşteri</label>
        <select asp-for="CustomerId" class="form-select" asp-items="customers">
            <option value="">Seçiniz...</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger small"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Year" class="form-label">Yıl</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger small"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Marka</label>
        <select id="brandSelect" class="form-select">
            <option value="">Marka seçin</option>
            @foreach (var b in brands)
            {
                <option value="@b">@b</option>
            }
        </select>

        <input type="text"
               id="brandManual"
               name="Brand"
               placeholder="Marka listede yoksa yazın"
               class="form-control mt-1"
               value="@Model.Brand" />

        <span asp-validation-for="Brand" class="text-danger small"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Model</label>
        <select id="modelSelect" class="form-select">
            <option value="">Önce marka seçin</option>
        </select>

        <input type="text"
               id="modelManual"
               name="Model"
               placeholder="Model listede yoksa yazın"
               class="form-control mt-1"
               value="@Model.Model" />

        <span asp-validation-for="Model" class="text-danger small"></span>
    </div>
</div>

